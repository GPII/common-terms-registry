extend /layout

block content
  div.panel.panel-default
    div.panel-heading
      h1 Forgot your password?
    div.panel-body
      if error
        div.alert.alert-danger #{error}
      form.form-horizontal(action="forgot-password", method="POST")
        fieldset
          div.form-group
          label.col-md-2.col-xs-4.control-label(for="email") Email address:
          div.col-md-7.col-xs-4
            input.input-md.col-md-12(type="email", id="email", name="email", value=email, placeholder="Your email")
            span.help-block Enter your email address and we'll send you an email with a link you can use to reset your password.
          div(class=['col-md-3','col-xs-4'])
            input(type="submit", class=['btn', 'btn-primary', 'col-md-8'], value="Submit")