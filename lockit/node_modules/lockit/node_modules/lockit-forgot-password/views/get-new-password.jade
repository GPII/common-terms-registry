extend /layout

block content
  div.panel.panel-default
    div.panel-heading
      h1 Enter a new password
    div.panel-body
      if error
        div.alert.alert-warning #{error}
      form.form-horizontal(action="/_l/forgot-password/#{token}", method="POST")
        div.form-group
          label.col-md-2.col-xs-4.control-label(for="password") Password:
          input.col-md-8.col-xs-6.input-md(type="password", id="password", name="password", value=password, placeholder="New password")
        div.form-group
          label.col-md-2.col-xs-4.control-label(for="confirm") Confirm Password:
          input.col-md-8.col-xs-6.input-md(type="password", id="confirm", name="confirm", value=confirm, placeholder="Confirm new password")
        div(class=['col-md-offset-10','col-md-2','col-xs-offset-8', 'col-xs-4'])
          input(type="submit", class="btn btn-primary", value="Submit")