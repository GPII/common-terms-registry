extend /layout

block content
  div.panel.panel-default
    div.panel-heading
      h1 Sign up for an account
    div.panel-body
        if error
            div.alert.alert-danger #{error}
        form.form-horizontal(action="signup", method="POST")
          fieldset
            div.form-group
              label.col-md-2.col-xs-4.control-label(for="username") Username:
              input.col-md-8.col-xs-6.input-md(type="text", id="username", name="username", value=username, placeholder="Pick a username")
            div.form-group
              label.col-md-2.col-xs-4.control-label(for="email") Email:
              input.col-md-8.col-xs-6.input-md(type="email", id="email", name="email", value=email, placeholder="Your email")
            div.form-group
              label.col-md-2.col-xs-4.control-label(for="password") Password:
              input.col-md-8.col-xs-6.input-md(type="password", id="password", name="password", value=password, placeholder="Create a password")
            div.form-group
              label.col-md-2.col-xs-4.control-label(for="verification") Confirm Password:
              input.col-md-8.col-xs-6.input-md(type="password", id="verification", name="verification", value=verification, placeholder="Confirm new password")
            div(class=['col-md-offset-10','col-md-2','col-xs-offset-8', 'col-xs-4'])
              input(type="submit", class=['btn','btn-primary','col-xs-12'], value="Signup")
