<div class="row">
    <div class="small-3 column">
        {{#if count}}
            <div class="count">
                <span class="record-count">
                    {{count}} records found
                </span>
            </div>
        {{/if}}
    </div>
    <div class="small-3 small-offset-1 column">
        {{#if count}}
            <a tabindex="0" class="ptd-icon- ptd-search-nav-start ptd-search-nav-page-link" offset="0">start</a>
            <a tabindex="0" class="ptd-icon- ptd-search-nav-previous ptd-search-nav-page-link" offset="0">previous<a/>
            <span class="ptd-search-page-links">
                {{>search-navigation-page-link}}
            </span>
            <a tabindex="0" class="ptd-icon- ptd-search-nav-next ptd-search-nav-page-link" offset="0">next</a>
            <a tabindex="0" class="ptd-icon- ptd-search-nav-end ptd-search-nav-page-link" offset="0">end</a>
        {{/if}}
    </div>
    <div class="small-offset-2 small-3 column">
        <select name="sort" class="ptd-search-sort">
            <option value="uniqueId">Alphabetical, by uniqueId</option>
            <option value="\uniqueId">Reverse Alphabetical, by uniqueID</option>
            <option value="\updated">Newest (Most Recently Updated)</option>
            <option value="updated">Oldest (Least Recently Updated)</option>
            <option value="" disabled=true class="ptd-search-order-best-match">Best Match</option>
        </select>
    </div>
</div>