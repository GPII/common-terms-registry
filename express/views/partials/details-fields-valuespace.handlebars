
<div class="row">
    <div class="details-heading">Value Space</div>
    {{#if user}}
        <div class="details-instructions">Separate values by commas, or notation describing the range of acceptable values.</div>
        <input type="text" name="valueSpace" placeholder="Enter a valueSpace for this term." value="{{record.valueSpace}}"/>
    {{else}}
        <input type="hidden" name="valueSpace" value="{{record.valueSpace}}"/>
        {{#if record.valueSpace}}
            {{record.valueSpace}}
        {{else}}
            No value space specified.
        {{/if}}
    {{/if}}
</div>