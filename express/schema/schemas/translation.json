{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.githubusercontent.com/the-t-in-rtf/common-terms-registry/master/express/public/schema/",
    "type": "object",
    "allOf": [
        {"$ref": "record.json"},
        {
            "required": ["termLabel","translationOf"],
            "properties": {
                "translationOf": {"$ref": "record.json#/definitions/translationOf"},
                "valueSpace": {"$ref": "record.json#/definitions/valueSpace"},
                "termLabel": {"$ref": "record.json#/definitions/termLabel"},
                "definition": {"$ref": "record.json#/definitions/definition"},
                "uses": {"$ref": "record.json#/definitions/uses"}
            }
        }
    ]
}