{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "allOf": [
        {"$ref": "record.json"},
        {
            "required": ["termLabel","definition"],
            "properties": {
                "uniqueId": {
                    "$ref": "https://raw.githubusercontent.com/the-t-in-rtf/common-terms-registry/master/express/public/schema/record.json#/definitions/uniqueId",
                    "pattern": "^[a-z]+([A-Z][a-z]+)*$"
                },
                "aliases": {
                    "anyOf": [ {"$ref": "alias.json"} ]
                },
                "transformations": {
                    "anyOf": [ {"$ref": "tranform.json"} ]
                },
                "translations": {
                    "anyOf": [ {"$ref": "tranform.json"} ]
                },
                "valueSpace": {"$ref": "https://raw.githubusercontent.com/the-t-in-rtf/common-terms-registry/master/express/public/schema/record.json#/definitions/valueSpace"},
                "termLabel": {"$ref": "https://raw.githubusercontent.com/the-t-in-rtf/common-terms-registry/master/express/public/schema/record.json#/definitions/termLabel"},
                "definition": {"$ref": "https://raw.githubusercontent.com/the-t-in-rtf/common-terms-registry/master/express/public/schema/record.json#/definitions/definition"},
                "uses": {"$ref": "https://raw.githubusercontent.com/the-t-in-rtf/common-terms-registry/master/express/public/schema/record.json#/definitions/uses"},
                "applicationUniqueFlag": {"$ref": "https://raw.githubusercontent.com/the-t-in-rtf/common-terms-registry/master/express/public/schema/record.json#/definitions/applicationUniqueFlag"}
            }
        }
    ]
}